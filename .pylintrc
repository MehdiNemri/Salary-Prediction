[MASTER]
# Additional Python paths
init-hook='import sys; sys.path.append(".")'


# Enable multiprocessing for faster analysis
jobs=4

[MESSAGES CONTROL]
# Disable specific warnings
disable=
    C0111,  # missing docstrings
    R0913,  # too many arguments
    W0621   # variable redefinition from outer scope

[FORMAT]
# Maximum line length
max-line-length=120

[DESIGN]
# Design limits
max-attributes=10
max-public-methods=20

[SIMILARITIES]
# Duplicate code detection
min-similarity-lines=4
ignore-comments=yes

